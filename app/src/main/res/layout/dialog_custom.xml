<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="280dp"
    android:layout_gravity="center"
    android:gravity="top"
    android:orientation="vertical">


    <TextView android:id="@+id/tv_customdialog_title"
        android:layout_width="240dp"
        android:layout_height="53dp"
        android:fontFamily="@font/notosanskrmedium"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="#333333"
        android:text="공지사항 제목입니다. 공지사항 제목입니다. 공지사항 제목입니다."
        android:layout_gravity="center"
        android:includeFontPadding="false"
        android:layout_marginTop="24dp"/>

    <TextView android:id="@+id/tv_customdialog_content"
        android:layout_width="240dp"
        android:layout_height="62dp"
        android:fontFamily="@font/notosanskrregular"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="#777777"
        android:text="내용입니다. 내용입니다. 내용입니다. 내용입니다. 내용입니다. 내용입니다. 내용입니다. 내용입니다. 내용입니다. 내용입니다."
        android:layout_gravity="center"
        android:includeFontPadding="false"
        android:layout_marginTop="12dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="27dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_customdialog_close"
            android:layout_width="128dp"
            android:layout_height="40dp"
            android:text="닫기"
            android:background="@drawable/shape_stroke_customdialog"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#ffae29"
            android:fontFamily="@font/notosanskrregular"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/tv_customdialog_detail"
            android:layout_width="128dp"
            android:layout_height="40dp"
            android:text="자세히 보기"
            android:background="@drawable/shape_rect_detail"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#FFF"
            android:fontFamily="@font/notosanskrregular"
            android:includeFontPadding="false"
            android:layout_marginLeft="6dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:background="@drawable/shape_stroke_order_list"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_customdialog_today"
            android:layout_width="158dp"
            android:layout_height="22dp"
            android:text="오늘 하루 보지 않기 X"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#666666"
            android:fontFamily="@font/notosanskrregular"
            android:includeFontPadding="false"
            android:layout_marginLeft="6dp"/>

    </LinearLayout>


</LinearLayout>